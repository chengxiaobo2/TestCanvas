<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">
        <com.example.test.testcanvas.view.DrawArc
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#BFEFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view2"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.view.PieChatView
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#B4CDCD"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view1"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.view.DrawPath
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#B4CDCD"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view4"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.view.DrawBitmap
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#BFEFFF"
                app:layout_constraintTop_toTopOf="@id/view3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view3"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.view.PaintSweepGradient
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#BFEFFF"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view6"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.indicatorLoading.IndicatorView
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#B4CDCD"
                app:layout_constraintTop_toTopOf="@id/view5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view5"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.verticalLoading.VerticalShapeLoading
                android:id="@+id/view7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#0000f1"
                app:loading_color="#ffffff"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view8"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.circleBitmap.CircleBitmapClipPath
                android:id="@+id/view8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#BFEFFF"
                app:layout_constraintTop_toTopOf="@id/view7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view7"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />

        <com.example.test.testcanvas.circleBitmap.CircleBitmapShader
                android:id="@+id/view9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:loading_color="#ffffff"
                android:background="#BFEFFF"
                app:layout_constraintTop_toBottomOf="@+id/view7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view10"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.circleBitmap.CircleBitmapXfermode
                android:id="@+id/view10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#B4CDCD"
                app:layout_constraintTop_toTopOf="@id/view9"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view9"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.view.DashBoard
                android:id="@+id/view11"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:loading_color="#ffffff"

                android:background="#B4CDCD"
                app:layout_constraintTop_toBottomOf="@+id/view9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view12"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.drawText.TextLine
                android:id="@+id/view12"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#ffffff"
                app:layout_constraintTop_toTopOf="@id/view11"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view11"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <com.example.test.testcanvas.drawText.DrawTextCenter
                android:id="@+id/view13"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#ffffff"
                app:layout_constraintTop_toBottomOf="@+id/view11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view14"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <TextView
                android:id="@+id/view14"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#BFEFFF"
                android:text="cheng"
                android:textSize="35dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/view13"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view13"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />

        <TextView
                android:id="@+id/view15"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#BFEFFF"
                android:gravity="center"
                android:text="点击查看\n StaticLayoutDemo"
                app:layout_constraintTop_toBottomOf="@+id/view13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view16"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />
        <ImageView
                android:id="@+id/view16"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#B4CDCD"
                android:text="cheng"
                android:textSize="35dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/view15"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view15"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_weight="1"
        />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
